@model InLogFrota.Core.ViewModels.VeiculoViewModel
@{
    ViewData["Title"] = "Remover Veículo";
    var h = Model;
}

<br />
<br />
<br />
<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("Remove", "Veiculo", FormMethod.Post))
        {
            @Html.ValidationSummary()
            @Html.HiddenFor(x => x.Id)
            <div class="form-group">
                <label for="Chassi">Chassi</label>
                @Html.TextBoxFor(x => x.Chassi, new { @class = "form-control", @readonly = "readonly" })
            </div>
            <div class="form-group">
                <label for="Cor">Cor</label>
                @Html.TextBoxFor(x => x.Cor, new { @class = "form-control", @readonly = "readonly" })
            </div>
            <div class="form-group">
                <label for="Tipo">Tipo</label>
                @Html.TextBoxFor(x => x.Tipo, new { @class = "form-control", @readonly = "readonly" })
            </div>
            <div class="form-group">
                <label for="NumeroPassageiros">Quantidade de passageiros</label>
                @Html.TextBoxFor(x => x.NumeroPassageiros, new { @class = "form-control", @readonly = "readonly" })
            </div>

            <h3>Deseja realmente excluir este veículo?</h3>
            <button type="submit" class="btn btn-primary">Sim</button>
            <button type="button" class="btn btn-primary" onclick="window.history.back()">Não</button>
        }
    </div>
</div>

